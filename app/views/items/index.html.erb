
<% if user_signed_in? %>


<h1>Item</h1>

<% if @items.any? %>
<ul>
  <% @items.each do |item| %>
  <li><%= link_to item.item_name, item_path(item) %></li>
  <% end %>
</ul>
<% else %>
<p>There are no items yet.</p>
<% end %>
<% if current_user[:admin] %>

<p><%= link_to "Add item", new_item_path %></p>
<% else %>

<% end %>

<% else %>
<p>Welcome, please sign in!</p>
<% end %>
