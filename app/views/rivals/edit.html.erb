<h1>Edit rival</h1>

<% if @rival.errors.any? %>

<h3>Please fix these errors:</h3>
<ul>
  <% @rival.errors.full_messages.each do |message| %>
  <li><%= message %></li>
  <% end %>
</ul>
<% end %>

<%= form_for @rival do |f| %>
<div class="form-group">

<%= f.label :rival_name %>
<%= f.text_field :rival_name %>
</div>
<div class="form-group">

<%= f.label :rival_health %>
<%= f.number_field :rival_health %>
</div>

<%= f.file_field :rival_avatar, class: "form-control"  %>

<%= submit_tag("Edit Rival")  %>
<% end %>
