
<% if user_signed_in? %>


<h1>Character</h1>

<% if @a_users_characters.any? %>
<ul>
  <% @a_users_characters.each do |character| %>
  <li><%= link_to character.character_name, character_path(character) %></li>
  <% end %>
</ul>
<% else %>
<p>There are no characters yet.</p>
<% end %>

<p><%= link_to "Add character", new_character_path %></p>

<% else %>
<p>Welcome, please sign in!</p>
<% end %>
